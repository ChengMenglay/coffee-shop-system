generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String              @id @default(cuid())
  name                       String
  email                      String?              @unique
  birthday                   DateTime?
  gender                     String?
  password                   String
  roleId                     String
  createdAt                  DateTime            @default(now())
  phone                      String?
  photoURL                  String?
  IngredientStocks           IngredientStock[]
  notification               Notification[]
  orders                     Order[]
  approvedPendingPurchases   PendingPurchase[]   @relation("ApprovedBy")
  pendingPurchases           PendingPurchase[]
  approvedPendingStockUsages PendingStockUsage[] @relation("ApprovedStockUsage")
  pendingStockUsages         PendingStockUsage[]
  purchases                  Purchase[]
  favorites                  Favorite[]
  voucherUsages              VoucherUsage[]
  role                       Role                @relation(fields: [roleId], references: [id])
  Feedback                  Feedback[]
  feedbackUpdated           Feedback[]          @relation("FeedbackUpdatedBy")
}

model Role {
  id          String       @id @default(cuid())
  name        String
  users       User[]
  permissions Permission[] @relation("RolePermissions")
}

model Permission {
  id    String @id @default(cuid())
  name  String
  key   String
  roles Role[] @relation("RolePermissions")
}

model Category {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  image     String?
  products  Product[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  price       Decimal
  image       String
  description String
  categoryId  String
  status      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  discount    Int?
  ExtraShot   ExtraShot[]
  ice         Ice[]
  orderItems  OrderItem[]
  category    Category    @relation(fields: [categoryId], references: [id])
  size        Size[]
  sugar       Sugar[]
  favorites   Favorite[]
  promotions  Promotion[] @relation("ProductPromotions")
}

model Promotion {
  id           String        @id @default(cuid())
  name         String
  type         PromotionType
  buyQuantity  Int?
  freeQuantity Int?
  discount     Decimal?
  startDate    DateTime
  endDate      DateTime
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  products     Product[]     @relation("ProductPromotions")
}

model Sugar {
  id         String      @id @default(cuid())
  name       String
  createdAt  DateTime    @default(now())
  productId  String
  image      String?
  orderItems OrderItem[]
  product    Product     @relation(fields: [productId], references: [id])
}

model Ice {
  id         String      @id @default(cuid())
  name       String
  createdAt  DateTime    @default(now())
  productId  String
  image      String?
  product    Product     @relation(fields: [productId], references: [id])
  orderItems OrderItem[]
}

model ExtraShot {
  id            String      @id @default(cuid())
  name          String
  priceModifier Decimal
  createdAt     DateTime    @default(now())
  productId     String
  image         String?
  product       Product     @relation(fields: [productId], references: [id])
  orderItems    OrderItem[]
}

model Size {
  id            String      @id @default(cuid())
  sizeName      String
  priceModifier Decimal
  productId     String
  fullPrice     Decimal
  createdAt     DateTime    @default(now())
  orderItems    OrderItem[]
  product       Product     @relation(fields: [productId], references: [id])
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  orderStatus   String      @default("Pending")
  paymentStatus Boolean     @default(false)
  paymentMethod String      @default("Cash")
  createdAt     DateTime    @default(now())
  total         Decimal
  discount      Decimal     @default(0)
  displayId     Int
  discountVoucher Decimal     @default(0)
  voucherId     String?
  voucherCode   String?
  voucher       Voucher?    @relation(fields: [voucherId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
  orderItems    OrderItem[]
  Feedback      Feedback[]
}

model OrderItem {
  id          String     @id @default(cuid())
  orderId     String
  productId   String
  quantity    Int        @default(1)
  price       Decimal
  note        String?
  sizeId      String?
  extraShotId String?
  iceId       String?
  sugarId     String?
  createdAt   DateTime   @default(now())
  extraShot   ExtraShot? @relation(fields: [extraShotId], references: [id])
  ice         Ice?       @relation(fields: [iceId], references: [id])
  order       Order      @relation(fields: [orderId], references: [id])
  product     Product    @relation(fields: [productId], references: [id])
  size        Size?      @relation(fields: [sizeId], references: [id])
  sugar       Sugar?     @relation(fields: [sugarId], references: [id])
}

model Ingredient {
  id                 String              @id @default(cuid())
  name               String
  stock              Int
  unit               String
  lowStockThreshold  Int
  createdAt          DateTime            @default(now())
  ingredientStocks   IngredientStock[]
  pendingPurchases   PendingPurchase[]
  pendingStockUsages PendingStockUsage[]
  Purchases          Purchase[]
  suppliers          Supplier[]          @relation("SupplierIngredients")
}

model IngredientStock {
  id           String     @id @default(cuid())
  ingredientId String
  status       String     @default("Use")
  createdAt    DateTime   @default(now())
  quantity     Int
  note         String?
  userId       String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model PendingStockUsage {
  id              String     @id @default(cuid())
  ingredientId    String
  userId          String
  quantity        Int
  note            String?
  approvalStatus  String     @default("Pending")
  approvedById    String?
  rejectionReason String?
  approvedAt      DateTime?
  createdAt       DateTime   @default(now())
  status          String     @default("Use")
  approvedBy      User?      @relation("ApprovedStockUsage", fields: [approvedById], references: [id])
  ingredient      Ingredient @relation(fields: [ingredientId], references: [id])
  user            User       @relation(fields: [userId], references: [id])
}

model Purchase {
  id           String     @id @default(cuid())
  ingredientId String
  quantity     Int
  price        Decimal
  createdAt    DateTime   @default(now())
  supplierId   String
  userId       String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  supplier     Supplier   @relation(fields: [supplierId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model PendingPurchase {
  id              String     @id @default(cuid())
  ingredientId    String
  supplierId      String
  userId          String
  quantity        Int
  price           Decimal
  note            String?
  approvalStatus  String     @default("Pending")
  approvedById    String?
  rejectionReason String?
  approvedAt      DateTime?
  createdAt       DateTime   @default(now())
  approvedBy      User?      @relation("ApprovedBy", fields: [approvedById], references: [id])
  ingredient      Ingredient @relation(fields: [ingredientId], references: [id])
  supplier        Supplier   @relation(fields: [supplierId], references: [id])
  user            User       @relation(fields: [userId], references: [id])
}

model Supplier {
  id                  String            @id @default(cuid())
  name                String
  contact             String
  isActive            Boolean           @default(true)
  createdAt           DateTime          @default(now())
  pendingPurchases    PendingPurchase[]
  purchases           Purchase[]
  suppliedIngredients Ingredient[]      @relation("SupplierIngredients")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  title     String
  user      User     @relation(fields: [userId], references: [id])
}

model DayClose {
  id              String   @id @default(cuid())
  date            DateTime @unique
  totalSales      Decimal
  totalOrders     Int
  totalCustomers  Int
  cashSales       Decimal  @default(0)
  abaSales        Decimal  @default(0)
  creditCardSales Decimal  @default(0)
  topProducts     String?
  promotionsUsed  String?
  lowStockItems   String?
  hourlyBreakdown String?
  notes           String?
  closedBy        String?
  closedAt        DateTime @default(now())
  createdAt       DateTime @default(now())
}

model Billboard {
  id        String   @id @default(cuid())
  image     String
  link      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  title     String
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  image     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  type      String?
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@unique([userId, productId])
}

model Voucher {
  id            String   @id @default(cuid())
  code          String   @unique
  description   String?

  discountType  VoucherDiscountType
  discountValue Decimal

  minOrderTotal Decimal?
  maxDiscount   Decimal?

  startDate     DateTime
  endDate       DateTime

  usageLimit    Int?
  usedCount     Int       @default(0)

  perUserLimit Int?
  isActive      Boolean   @default(true)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  voucherUsages VoucherUsage[]
  orders        Order[]
}

model VoucherUsage {
  id        String   @id @default(cuid())
  voucherId String
  userId    String
  usedAt    DateTime @default(now())

  voucher   Voucher  @relation(fields: [voucherId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@index([voucherId])
  @@index([userId])
}

model Feedback {
  id          String           @id @default(cuid())
  userId      String
  orderId     String?          // Optional (some feedback not order-related)
  category    String
  description String           @db.VarChar(150)
  images      String[]         // Store image URLs (Cloudinary, S3, etc.)
  status      String           @default("PENDING")
  
  updatedById   String?     
  createdAt   DateTime         @default(now())

  user        User             @relation(fields: [userId], references: [id])
  order       Order?           @relation(fields: [orderId], references: [id])
  updatedBy   User?          @relation("FeedbackUpdatedBy", fields: [updatedById], references: [id])     


  @@index([userId])
  @@index([orderId])
}


enum VoucherDiscountType {
  PERCENT
  FIXED
}

enum PromotionType {
  BUY_X_GET_Y
  FIXED_DISCOUNT
  PERCENT_DISCOUNT
}
